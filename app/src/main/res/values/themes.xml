<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diary" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/urbanist_extrabold</item>

    </style>

    <style name="customdatetheme" parent="TextAppearance.MaterialCalendarWidget.Date">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="customdatethemeForCalendarFrag" parent="TextAppearance.MaterialCalendarWidget.Date">

<!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/urbanist_extrabold</item>

    </style>

    <style name="customdateheadingtheme" parent="TextAppearance.MaterialCalendarWidget.Header">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="customdateheadingthemeForCalendarFrag" parent="TextAppearance.MaterialCalendarWidget.Header">

<!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:textSize">15sp</item>

    </style>

    <style name="customdateweektheme" parent="TextAppearance.MaterialCalendarWidget.WeekDay">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="customdateweekthemeForCalendarFrag" parent="TextAppearance.MaterialCalendarWidget.WeekDay">

<!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/urbanist_extrabold</item>

    </style>


</resources>